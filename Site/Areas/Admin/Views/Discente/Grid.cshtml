@model IEnumerable<Repository.DiscenteViewModel>

@{
    Layout = null;
}

<div class="row clearfix margin-top-40">
    <div class="table-responsive">
        <table class="table table-hover js-basic-example dataTable table-striped table_custom border-style spacing5">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Matrícula</th>
                    <th>E-mail</th>
                    <th>Status</th>
                    <th style="text-align: center;">Opções</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var Discente in Model.OrderBy(a => a.Nome))
                {
                    <tr>
                        <td style="vertical-align: middle !important;">@Discente.Nome</td>
                        <td style="vertical-align: middle !important;">@Discente.Matricula</td>
                        <td style="vertical-align: middle !important;">@Discente.Email</td>
                        <td style="vertical-align: middle !important;">@Discente.Status</td>
                        <td style="text-align: center;">

                            <a href="@Url.Action("Alterar", "Discente", new { Id = Discente.Id })"
                               class="btn btn-icon btn-sm js-sweetalert"
                               title="Alterar">
                                <i class="fas fa-edit text-primary"></i>
                            </a>

                            <a href="@Url.Action("Detalhes", "Discente", new { Id = Discente.Id })"
                               class="btn btn-icon btn-sm js-sweetalert"
                               title="Detalhes">
                                <i class="fas fa-search text-primary"></i>
                            </a>

                            <a href="#"
                               onclick="Excluir(event)"
                               class="btn btn-icon btn-sm js-sweetalert"
                               title="Excluir"
                               data-id="@Discente.Id"
                               data-url="/Admin/Discente/Excluir?Id=">
                                <i class="fas fa-trash-alt text-danger"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>