@model Domain.MensagemWhats

@{
    ViewData["Title"] = "Mensagem - Adicionar";
}

<div class="tab-pane active">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>

        @using (Html.BeginForm("Adicionar", "Mensagem", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="card-body">

                <div class="row">
                    <div class="col-md-10">
                        @Html.LabelFor(a => a.Assunto)
                        @Html.TextBoxFor(a => a.Assunto, "", new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Assunto)
                    </div>

                    <div class="col-md-2">
                        @Html.LabelFor(a => a.DataEnvio)
                        @Html.TextBoxFor(a => a.DataEnvio, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date", @name = "date" })
                        @Html.ValidationMessageFor(a => a.DataEnvio)
                    </div>

                    <div class="col-md-12">
                        @Html.LabelFor(a => a.Mensagem)
                        @Html.TextAreaFor(a => a.Mensagem, 5, 100, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.Mensagem)
                    </div>

                    <div class="col-md-4">
                        @Html.LabelFor(a => a.CursoId)
                        @Html.DropDownListFor(a => a.CursoId, HelperLista.Curso(), null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(a => a.CursoId)
                    </div>
                </div>

                <div class="row clearfix margin-top-40">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary fa-pull-left">Gravar</button>
                        <a href="@Url.Action("Index", "Mensagem")" class="btn btn-default fa-pull-right">Fechar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
